{
  "name": "convergence-os",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.24.0",
  "engines": {
    "node": "^25.0.0",
    "pnpm": "^10.24.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@convergence/web",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "prepare": "husky",
    "db:generate": "turbo run db:generate --filter=@convergence/db",
    "db:migrate": "turbo run db:migrate --filter=@convergence/db",
    "db:studio": "turbo run db:studio --filter=@convergence/db",
    "docs:build": "sphinx-build -b html docs docs/_build/html",
    "docs:serve": "python -m http.server -d docs/_build/html"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@convergence/prettier-config": "workspace:*",
    "eslint": "^9",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.7.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "turbo": "^2.6.1",
    "typedoc": "^0.28",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --check",
      "eslint --fix"
    ],
    "*.{md,json}": [
      "prettier --check"
    ]
  }
}
