/**
 * ConvergenceOS Documentation - Custom Styles
 *
 * @fileoverview Custom CSS for Sphinx documentation matching the Convergence theme.
 * This stylesheet overrides Furo theme defaults to create visual consistency
 * between the documentation and the application.
 *
 * @description
 * Applies the Convergence theme's:
 * - Purple/violet accent colors (hsl(262 83% 58%))
 * - Clean, modern design with subtle shadows
 * - Glassmorphism effects for cards and containers
 * - Consistent border radius and spacing
 * - Dark mode support with proper contrast
 */

/* ============================================================================
   CSS CUSTOM PROPERTIES - Convergence Theme Variables
   ============================================================================ */

:root {
  /* Light Mode Colors - Convergence Theme */
  --convergence-background: hsl(0 0% 100%);
  --convergence-foreground: hsl(240 10% 10%);
  --convergence-card: hsl(0 0% 100%);
  --convergence-card-foreground: hsl(240 10% 10%);
  --convergence-primary: hsl(262 83% 58%);
  --convergence-primary-foreground: hsl(0 0% 100%);
  --convergence-secondary: hsl(240 5% 96%);
  --convergence-secondary-foreground: hsl(240 6% 10%);
  --convergence-muted: hsl(240 5% 96%);
  --convergence-muted-foreground: hsl(240 4% 46%);
  --convergence-accent: hsl(262 80% 96%);
  --convergence-accent-foreground: hsl(262 83% 45%);
  --convergence-border: hsl(240 6% 90%);
  --convergence-ring: hsl(262 83% 58%);
  
  /* Glassmorphism */
  --convergence-glass: hsla(0, 0%, 100%, 0.7);
  --convergence-glass-strong: hsla(0, 0%, 100%, 0.85);
  --convergence-glass-border: hsla(240, 6%, 90%, 0.5);
  
  /* Shadows */
  --convergence-shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
  --convergence-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
  --convergence-shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
  --convergence-shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
  --convergence-shadow-glass: 0 8px 32px hsla(262, 83%, 58%, 0.1);
  
  /* Border Radius */
  --convergence-radius: 0.375rem;
  --convergence-radius-lg: 0.75rem;
  --convergence-radius-xl: 1rem;
}

/* Dark Mode Variables */
[data-theme="dark"] {
  --convergence-background: hsl(230 25% 9%);
  --convergence-foreground: hsl(0 0% 95%);
  --convergence-card: hsl(230 20% 12%);
  --convergence-card-foreground: hsl(0 0% 95%);
  --convergence-primary: hsl(262 83% 65%);
  --convergence-primary-foreground: hsl(0 0% 100%);
  --convergence-secondary: hsl(230 20% 18%);
  --convergence-secondary-foreground: hsl(0 0% 95%);
  --convergence-muted: hsl(230 15% 20%);
  --convergence-muted-foreground: hsl(240 5% 65%);
  --convergence-accent: hsl(262 30% 20%);
  --convergence-accent-foreground: hsl(262 80% 75%);
  --convergence-border: hsl(230 15% 20%);
  --convergence-ring: hsl(262 83% 65%);
  
  /* Glassmorphism - Dark */
  --convergence-glass: hsla(230, 25%, 12%, 0.7);
  --convergence-glass-strong: hsla(230, 25%, 15%, 0.85);
  --convergence-glass-border: hsla(230, 15%, 25%, 0.5);
  
  /* Shadows - Dark */
  --convergence-shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.3);
  --convergence-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.4), 0 1px 2px -1px rgb(0 0 0 / 0.4);
  --convergence-shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.4), 0 2px 4px -2px rgb(0 0 0 / 0.4);
  --convergence-shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.4), 0 4px 6px -4px rgb(0 0 0 / 0.4);
  --convergence-shadow-glass: 0 8px 32px hsla(262, 83%, 58%, 0.15);
}

/* ============================================================================
   FURO THEME OVERRIDES - Brand Colors
   ============================================================================ */

/* Override Furo's brand colors with Convergence purple */
:root {
  --color-brand-primary: var(--convergence-primary) !important;
  --color-brand-content: var(--convergence-primary) !important;
}

[data-theme="dark"] {
  --color-brand-primary: var(--convergence-primary) !important;
  --color-brand-content: var(--convergence-primary) !important;
}

/* ============================================================================
   BODY & BACKGROUND
   ============================================================================ */

body {
  background-color: var(--convergence-background);
  color: var(--convergence-foreground);
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* Full-width layout - remove Furo's auto margins */
.page {
  max-width: 100% !important;
  margin: 0 !important;
  padding: 0 !important;
}

/* ============================================================================
   SIDEBAR STYLING
   ============================================================================ */

.sidebar-drawer {
  background: var(--convergence-glass-strong);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-right: 1px solid var(--convergence-glass-border);
  box-shadow: var(--convergence-shadow-glass);
  position: fixed !important;
  left: 0 !important;
  top: 0 !important;
  height: 100vh !important;
  width: 280px !important;
  overflow-y: auto;
  z-index: 100;
}

.sidebar-brand-text {
  color: var(--convergence-primary);
  font-weight: 700;
}

.sidebar-tree .reference {
  color: var(--convergence-foreground);
  transition: all 0.2s ease;
}

.sidebar-tree .reference:hover {
  color: var(--convergence-primary);
  background-color: var(--convergence-muted);
  border-radius: var(--convergence-radius);
}

.sidebar-tree .current > .reference {
  background-color: var(--convergence-accent);
  color: var(--convergence-accent-foreground);
  border-radius: var(--convergence-radius);
  font-weight: 600;
}

/* ============================================================================
   MAIN CONTENT AREA
   ============================================================================ */

.main {
  margin-left: 280px !important;
  margin-right: 280px !important;
  max-width: 100% !important;
  padding: 0 !important;
}

.main-content {
  background-color: transparent;
  width: 100%;
  max-width: 900px;
  margin: 0 auto;
  padding: 2rem 3rem;
}

article {
  max-width: 100%;
  color: var(--convergence-foreground);
}

/* Table of contents sidebar (right side) */
.toc-drawer {
  background: var(--convergence-glass-strong);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-left: 1px solid var(--convergence-glass-border);
  box-shadow: var(--convergence-shadow-glass);
  position: fixed !important;
  right: 0 !important;
  top: 0 !important;
  height: 100vh !important;
  width: 280px !important;
  overflow-y: auto;
  z-index: 100;
}

/* ============================================================================
   HEADINGS
   ============================================================================ */

h1, h2, h3, h4, h5, h6 {
  color: var(--convergence-foreground);
  font-weight: 700;
}

h1 {
  color: var(--convergence-primary);
  border-bottom: 2px solid var(--convergence-border);
  padding-bottom: 0.5rem;
  margin-bottom: 1.5rem;
}

h2 {
  border-bottom: 1px solid var(--convergence-border);
  padding-bottom: 0.375rem;
  margin-top: 2rem;
  margin-bottom: 1rem;
}

h3 {
  color: var(--convergence-accent-foreground);
  margin-top: 1.5rem;
  margin-bottom: 0.75rem;
}

/* Permalink hover style */
.headerlink {
  color: var(--convergence-muted-foreground);
  opacity: 0;
  transition: opacity 0.2s ease;
}

h1:hover .headerlink,
h2:hover .headerlink,
h3:hover .headerlink {
  opacity: 1;
}

.headerlink:hover {
  color: var(--convergence-primary);
}

/* ============================================================================
   LINKS
   ============================================================================ */

a {
  color: var(--convergence-primary);
  text-decoration: none;
  transition: color 0.2s ease;
}

a:hover {
  color: var(--convergence-accent-foreground);
  text-decoration: underline;
}

a code {
  color: var(--convergence-primary);
}

/* ============================================================================
   CODE BLOCKS & INLINE CODE
   ============================================================================ */

code {
  background-color: var(--convergence-muted);
  color: var(--convergence-accent-foreground);
  padding: 0.125rem 0.375rem;
  border-radius: var(--convergence-radius);
  font-size: 0.875em;
  font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, monospace;
  border: 1px solid var(--convergence-border);
}

pre {
  background: var(--convergence-glass-strong);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 1px solid var(--convergence-glass-border);
  border-radius: var(--convergence-radius-lg);
  padding: 1rem;
  overflow-x: auto;
  box-shadow: var(--convergence-shadow-glass);
}

pre code {
  background-color: transparent;
  color: var(--convergence-foreground);
  padding: 0;
  border: none;
  font-size: 0.875rem;
  line-height: 1.5;
}

/* Syntax highlighting adjustments */
.highlight {
  border-radius: var(--convergence-radius-lg);
  box-shadow: var(--convergence-shadow-md);
}

/* ============================================================================
   ADMONITIONS (Notes, Warnings, etc.)
   ============================================================================ */

.admonition {
  background: var(--convergence-glass-strong);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-left: 4px solid var(--convergence-primary);
  border: 1px solid var(--convergence-glass-border);
  border-left: 4px solid var(--convergence-primary);
  border-radius: var(--convergence-radius-lg);
  padding: 1rem 1.25rem;
  margin: 1.5rem 0;
  box-shadow: var(--convergence-shadow-glass);
}

.admonition-title {
  color: var(--convergence-primary);
  font-weight: 700;
  margin-bottom: 0.5rem;
}

.admonition.note {
  border-left-color: var(--convergence-primary);
}

.admonition.warning {
  border-left-color: hsl(38 92% 50%);
}

.admonition.warning .admonition-title {
  color: hsl(38 92% 50%);
}

.admonition.danger {
  border-left-color: hsl(0 84% 60%);
}

.admonition.danger .admonition-title {
  color: hsl(0 84% 60%);
}

.admonition.tip {
  border-left-color: hsl(142 76% 36%);
}

.admonition.tip .admonition-title {
  color: hsl(142 76% 36%);
}

/* ============================================================================
   TABLES
   ============================================================================ */

table {
  border-collapse: collapse;
  width: 100%;
  margin: 1.5rem 0;
  border-radius: var(--convergence-radius-lg);
  overflow: hidden;
  box-shadow: var(--convergence-shadow);
}

thead {
  background-color: var(--convergence-primary);
  color: var(--convergence-primary-foreground);
}

th {
  padding: 0.75rem 1rem;
  text-align: left;
  font-weight: 600;
  border-bottom: 2px solid var(--convergence-border);
}

td {
  padding: 0.75rem 1rem;
  border-bottom: 1px solid var(--convergence-border);
}

tbody tr {
  background-color: var(--convergence-card);
  transition: background-color 0.2s ease;
}

tbody tr:hover {
  background-color: var(--convergence-muted);
}

tbody tr:last-child td {
  border-bottom: none;
}

/* ============================================================================
   BUTTONS & INTERACTIVE ELEMENTS
   ============================================================================ */

button,
.btn,
.button {
  background-color: var(--convergence-primary);
  color: var(--convergence-primary-foreground);
  border: 1px solid var(--convergence-border);
  border-radius: var(--convergence-radius);
  padding: 0.5rem 1rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
  box-shadow: var(--convergence-shadow-sm);
}

button:hover,
.btn:hover,
.button:hover {
  background-color: var(--convergence-accent-foreground);
  box-shadow: var(--convergence-shadow-md);
  transform: translateY(-1px);
}

/* ============================================================================
   SEARCH BOX
   ============================================================================ */

.search-input {
  background-color: var(--convergence-card);
  border: 1px solid var(--convergence-border);
  border-radius: var(--convergence-radius);
  color: var(--convergence-foreground);
  padding: 0.5rem 1rem;
  transition: all 0.2s ease;
}

.search-input:focus {
  outline: none;
  border-color: var(--convergence-primary);
  box-shadow: 0 0 0 3px hsla(262, 83%, 58%, 0.1);
}

/* ============================================================================
   CARDS & CONTAINERS
   ============================================================================ */

.card,
.container {
  background: var(--convergence-glass-strong);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 1px solid var(--convergence-glass-border);
  border-radius: var(--convergence-radius-lg);
  padding: 1.5rem;
  box-shadow: var(--convergence-shadow-glass);
}

/* Glassmorphism effect for special containers */
.glass-container {
  background: var(--convergence-glass);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  border: 1px solid var(--convergence-glass-border);
  border-radius: var(--convergence-radius-lg);
  box-shadow: var(--convergence-shadow-glass);
}

/* ============================================================================
   SCROLLBAR STYLING
   ============================================================================ */

::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

::-webkit-scrollbar-track {
  background: var(--convergence-muted);
  border-radius: 4px;
}

::-webkit-scrollbar-thumb {
  background: var(--convergence-border);
  border-radius: 4px;
  transition: background 0.2s ease;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--convergence-muted-foreground);
}

/* ============================================================================
   API DOCUMENTATION STYLING
   ============================================================================ */

.sig {
  background: var(--convergence-glass);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  border: 1px solid var(--convergence-glass-border);
  border-radius: var(--convergence-radius);
  padding: 0.5rem 0.75rem;
  font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, monospace;
  overflow-x: auto;
}

.sig-name {
  color: var(--convergence-primary);
  font-weight: 600;
}

.sig-param {
  color: var(--convergence-accent-foreground);
}

dt {
  font-weight: 600;
  color: var(--convergence-primary);
  margin-top: 1rem;
}

dd {
  margin-left: 2rem;
  margin-bottom: 1rem;
}

/* ============================================================================
   FOOTER
   ============================================================================ */

.footer {
  border-top: 1px solid var(--convergence-border);
  color: var(--convergence-muted-foreground);
  padding: 2rem 0;
  margin-top: 4rem;
}

/* ============================================================================
   RESPONSIVE ADJUSTMENTS
   ============================================================================ */

@media (max-width: 1200px) {
  /* Hide right TOC sidebar on smaller screens */
  .toc-drawer {
    display: none !important;
  }
  
  .main {
    margin-right: 0 !important;
  }
}

@media (max-width: 768px) {
  /* Hide left sidebar on mobile, show as overlay/drawer */
  .sidebar-drawer {
    transform: translateX(-100%);
    transition: transform 0.3s ease;
  }
  
  .sidebar-drawer.open {
    transform: translateX(0);
  }
  
  .main {
    margin-left: 0 !important;
  }
  
  .main-content {
    padding: 1rem 1.5rem;
  }
  
  article {
    max-width: 100%;
    padding: 0;
  }
  
  .admonition {
    padding: 0.75rem 1rem;
  }
  
  table {
    font-size: 0.875rem;
  }
  
  th, td {
    padding: 0.5rem 0.75rem;
  }
}

/* ============================================================================
   PRINT STYLES
   ============================================================================ */

@media print {
  body {
    background: white;
    color: black;
  }
  
  .sidebar-drawer {
    display: none;
  }
  
  a {
    color: black;
    text-decoration: underline;
  }
  
  pre, code {
    border: 1px solid #ddd;
  }
}
